{
  "name": "lightpaper",
  "version": "1.0.0",
  "description": "A system to display information on a screen like a light paper",
  "main": "index.js",
  "scripts": {
    "livereload": "live-reload ./ --port=9091",
    "sass": "node-sass --include-path dev/scss dev/scss/main.scss | npm run postcss",
    "sass-watch": "nodemon -e dev/scss -x \"npm run sass\"",
    "postcss": "postcss --use autoprefixer --local-plugins --no-map -o dist/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ict-lab/lightpaper.git"
  },
  "keywords": [
    "CMS"
  ],
  "author": "Tim Doppenberg, Paul Nooij, John Aartman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ict-lab/lightpaper/issues"
  },
  "homepage": "https://github.com/ict-lab/lightpaper#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "live-reload": "^1.1.0",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "postcss": "^5.0.21",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
